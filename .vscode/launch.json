{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Launch (WSL + venv)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development",
                "PYTHONPATH": "${workspaceFolder}"
            },

            // якщо venv у корені проекту
            "python": "${workspaceFolder}/venv/bin/python3"
        }
    ]
}
